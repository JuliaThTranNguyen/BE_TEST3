{
    "version": 2,
    "builds": [
      {
        "src": "api/index.ts",
        "use": "@vercel/node",
        "config": {
          "functions": {
            "api/**/*.ts": {
              "memory": 512
            }
          },
          "env": {
            "DB_USER": "${DB_USER}",
            "DB_PASSWORD": "${DB_PASSWORD}",
            "DB_ADDRESS": "${DB_ADDRESS}",
            "DB_NAME": "${DB_NAME}",
            "DB_URL": "${DB_URL}",
            "TOKEN_SECRET": "${TOKEN_SECRET}",
            "MY_ENV_VAR": "my-value"
          },
          "build": {
            "env": {
              "BUILD_ENV_VAR": "build-time-value"
            },
            "postinstall": "npm run build"
          }
        }
      }
    ],
    "routes": [
      { "src": "/(.*)", "dest": "api/index.ts" }
    ],
    "dev": {
      "functions": {
        "api/**/*.ts": {
          "port": 3000
        }
      }
    }
  }
  